<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for the Post Title -->
    <EditText
        android:id="@+id/et_post_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Post Title"
        android:inputType="text" />

    <!-- EditText for the Post Description -->
    <EditText
        android:id="@+id/et_post_description"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Post Description"
        android:inputType="textMultiLine" />

    <!-- ImageView to display the selected image -->
    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Selected Image"
        android:scaleType="centerCrop" />

    <!-- Button to allow the user to choose an image -->
    <Button
        android:id="@+id/btn_select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image" />

    <!-- Button to save the post -->
    <Button
        android:id="@+id/btn_save_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Post" />

</LinearLayout>
